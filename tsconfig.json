{
	"compilerOptions": {
		"target": "es5",
		"module": "system",
		"moduleResolution": "node",
		"emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "noEmitHelpers": false,
    "importHelpers":  false,
		"lib": [ "es6", "dom" ],
		"sourceMap": true,
		"paths": {
			"app/*": ["./app/*/index"]
		},
		"baseUrl": "./"
	},
  "include": [
    "app/**/*.ts"
  ],
	"exclude": [
	],
	"compileOnSave": true
}
